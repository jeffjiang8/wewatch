
<%= bootstrap_form_with model: @user do |f| %>
  <div class="input-group form-group">
    <div class="input-group-prepend">
      <span class="input-group-text"><i class="fas fa-user"></i></span>
    </div>
    <%= f.text_field :user_name, hide_label: true, placeholder: "username" , :control_class => "form-control" %>
  </div>
  <div class="input-group form-group">
    <div class="input-group-prepend">
      <span class="input-group-text"><i class="fas fa-address-card"></i></span>
    </div>
    <%= f.text_field :first_name, hide_label: true, placeholder: "first name" , :control_class => "form-control" %>
  </div>
  <div class="input-group form-group">
    <div class="input-group-prepend">
      <span class="input-group-text"><i class="fas fa-address-card"></i></span>
    </div>
    <%= f.text_field :last_name, hide_label: true, placeholder: "last name" , :control_class => "form-control" %>
  </div>
  <div class="input-group form-group">
    <div class="input-group-prepend">
      <span class="input-group-text"><i class="fas fa-hand-spock"></i></span>
    </div>
    <%= f.text_field :age, hide_label: true, placeholder: "age" , :control_class => "form-control" %>
  </div>
  <div class="input-group form-group">
    <div class="input-group-prepend">
      <span class="input-group-text"><i class="fas fa-key"></i></span>
    </div>
    <%= f.password_field :password, hide_label: true, placeholder: "password" , :control_class => "form-control"  %>
  </div>
  <div class="input-group form-group">
    <div class="input-group-prepend">
      <span class="input-group-text"><i class="fas fa-key"></i></span>
    </div>
    <%= f.password_field :password, hide_label: true, placeholder: "confirm password" , :control_class => "form-control"  %>
  </div>
  <div class="form-group">
  <div class="input-group form-group">
    <div class="input-group-prepend">
      <span class="input-group-text"><i class="fa fa-mobile"></i></span>
    </div>
    <%= f.text_field :phone_number, hide_label: true, placeholder: "phone number" , :control_class => "form-control" %>
  </div>
    <%= f.submit "Take me in!", :class => "btn float-right login_btn"%>
  </div>
<% end %>
<% if logged_in?%>
  <%= link_to "Back", user_path(@user) %>
<% end %>